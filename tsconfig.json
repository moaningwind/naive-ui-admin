{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es6",
    "lib": ["dom", "ESNext"],
    "jsx": "preserve",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./types/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
